import java.util.Scanner;
public class Legs {
    public static void solve(int n) {
        int x = n / 4;
        int rem = n - (4 * x);
        int y = rem / 2;
        System.out.println(x + y);
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int size = sc.nextInt();
        while(size != 0) {
            int n = sc.nextInt();
            solve(n);
            size--;
        }
 
    }
}
