import java.util.Scanner;
 
public class RobotProgram {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int size = sc.nextInt();
        while(size != 0) {
            int x = sc.nextInt();
            int y = sc.nextInt();
            if(x == y)
                System.out.println(x + y);
            else {
                System.out.println(Math.max(x , y) * 2 - 1);
            }
            size--;
        }
    }
}
